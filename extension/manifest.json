{
    "manifest_version": 3,
    "name": "OpenAI Phishing Scanner",
    "version": "1.0",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://mail.google.com/"],
    "action": {
        "default_popup": "dist/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}